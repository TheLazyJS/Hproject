<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1/2"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/progressBar"
        android:layout_centerInParent="true"
        android:id="@+id/step1of2"/>

    <TextView
        android:layout_width="350dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Let us know who you are ?"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/step1of2"
        android:layout_centerInParent="true"
        android:id="@+id/step1of2_text1"/>

    <ImageButton
        android:id="@+id/sex1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/step1of2_text1"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/sex1" />

    <ImageButton
        android:id="@+id/sex2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/sex1"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/sex2" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip now"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/sex2"
        android:layout_centerInParent="true"/>

</RelativeLayout>
